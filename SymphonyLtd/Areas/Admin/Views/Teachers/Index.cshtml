<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Striped</strong> Rows
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="#" onclick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                @Html.ActionLink("Create New", "Create", "Teachers", new { area = "Admin" })
                            </li>
                            <li>
                                <a href="#" onclick="return false;">Refresh Data</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Subj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Experience)
                            </th>
                            
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subj)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Experience)
                            </td>                           
                            <td>
                                @Html.ActionLink("Edit", "Create", new { id = item.TeacherID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TeacherID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TeacherID })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
