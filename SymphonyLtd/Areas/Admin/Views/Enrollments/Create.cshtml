<script>
    $("#IsValid").on('change', function () {
        if ($(this).is(':checked')) {
            if ($(this).is(':checked')) {
                if ($("#IsDefaulter").is(':checked')) {
                    $("#IsDefaulter").click();
                }
                if ($("#IsDropOff").is(':checked')) {
                    $("#IsDropOff").click();
                }
            }
        }
    }); $("#IsDefaulter").on('change', function () {
        if ($(this).is(':checked')) {
            if ($("#IsValid").is(':checked')) {
                $("#IsValid").click();

            }
        }
    }); $("#IsDropOff").on('change', function () {
        if ($(this).is(':checked')) {
                if ($("#IsValid").is(':checked')) {
                    $("#IsValid").click();
                }
        }
    });
     $("#form_validation").submit((e) => {
        e.preventDefault();
        var url = '@Url.Action("Create","Enrollments")';
        var model = {
            "CourseID": $("#CourseID").val(),
            "StudentID": $("#StudentID").val(),
            "EnrollFrom": $("#EnrollFrom").val(),
            "EnrollTo": $("#EnrollTo").val(),
            "IsValid": $("#IsValid").is(':checked'),
            "IsDefaulter": $("#IsDefaulter").is(':checked'),
            "IsDropOff": $("#IsDropOff").is(':checked'),           
        };
        $.ajax({
            type: "POST",
            url: url,
            data: model, // serializes the form's elements.
            success: function (data) {
                $("#reset").click(); // show response from the php script.
            }
        });

    });
</script>