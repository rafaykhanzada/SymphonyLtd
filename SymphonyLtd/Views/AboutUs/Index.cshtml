@model SymphonyLtd.Models.tblAboutU

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";

}

    <!-- Hero Start -->
<section class="bg-half d-table w-100" style="background: url('/App_Assets/Public/images/company/aboutus.jpg');">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="page-next-level title-heading">
                    <h1 class="text-white title-dark"> About us </h1>
                    <p class="text-white-50 para-desc mb-0 mx-auto">The singular purpose of providing high quality education to the deserving and talented sections of society saw new light with its collaboration.</p>
                    <div class="page-next">
                        <nav aria-label="breadcrumb" class="d-inline-block">
                            <ul class="breadcrumb bg-white rounded shadow mb-0">
                                <li class="breadcrumb-item"><a href="~/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Aboutus</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
    <div class="position-relative">
        <div class="shape overflow-hidden text-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!-- Hero End -->

    <section class="section">
        <div class="container">
            <div class="row align-items-center" id="counter">
                <div class="col-md-6">
                    <img src="~/uploads/@Model.Image" class="img-fluid" alt="">
                </div><!--end col-->

                <div class="col-md-6 mt-4 pt-2 mt-sm-0 pt-sm-0">
                    <div class="ms-lg-4">
                       
                        <div class="section-title">
                            <h4 class="title mb-4">@Model.SubTitle</h4>
                            <p class="text-muted">@Model.Description</p>
                            <a href="@Model.ButtonUrl" class="btn btn-primary mt-3">@Model.ButtonText</a>
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->

        @if (ViewBag.Partners != null)
        {
            <div class="container mt-4">
                <div class="row justify-content-center">
                    @foreach (var item in ViewBag.Partners)
                    {
                        <div class="col-lg-2 col-md-2 col-6 text-center pt-4">
                            <img src="~/uploads/@item.Logo" class="avatar avatar-ex-sm" alt="">
                        </div>
                    }
                </div><!--end row-->
            </div><!--end container-->
        }
    </section><!--end section-->

    <!-- End -->
   